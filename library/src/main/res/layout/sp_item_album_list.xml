<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:gravity="center_vertical"
              android:paddingBottom="5dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp">
	
	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@id/spPictureView"
		android:layout_width="60dp"
		android:layout_height="60dp"
		app:failureImage="?attr/pickerFailureImage"
		app:failureImageScaleType="centerCrop"
		app:placeholderImage="?attr/pickerPlaceholderImage"
		app:placeholderImageScaleType="centerCrop"/>
	
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:layout_weight="1.0"
		android:orientation="vertical">
		
		<TextView
			android:id="@id/spTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="?attr/pickerAlbumTitleTextColor"
			android:textSize="?attr/pickerAlbumTitleTextSize"/>
		
		<TextView
			android:id="@id/spContent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:textColor="?attr/pickerAlbumContentTextColor"
			android:textSize="?attr/pickerAlbumContentTextSize"/>
	</LinearLayout>
	
	<ImageView
		android:id="@id/spSelected"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="?attr/pickerAlbumCheckImage"/>
</LinearLayout>