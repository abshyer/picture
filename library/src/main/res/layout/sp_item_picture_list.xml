<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
	
	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@id/spPictureView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		app:failureImage="?attr/pickerFailureImage"
		app:failureImageScaleType="fitXY"
		app:placeholderImage="?attr/pickerPlaceholderImage"
		app:placeholderImageScaleType="fitXY"
		app:viewAspectRatio="1.0"/>
	
	<View
		android:id="@id/spLayer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="?attr/pickerLayer"/>
	
	<ImageView
		android:id="@id/spSelected"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:layout_margin="5dp"
		android:background="?selectableItemBackgroundBorderless"
		android:padding="5dp"
		android:src="?attr/pickerPictureCheckImage"/>
</FrameLayout>